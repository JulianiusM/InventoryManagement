{
  "name": "surveyor",
  "version": "0.2.0-rc.1",
  "private": true,
  "scripts": {
    "pretest": "npm run generate",
    "run": "node dist/server.js",

    "server:dev": "nodemon --watch src --ext ts,js --exec \"ts-node --project tsconfig.server.json src/server.ts\"",
    "server:client": "cross-env NODE_ENV=development node esbuild.client.js --watch",
    "server": "npm run build && concurrently \"npm run server:dev\" \"npm run server:client\"",

    "typeorm": "ts-node --project tsconfig.server.json scripts/runMigration.ts",
    "typeorm:drop": "npm run typeorm -- schema:drop migrationDataSource.ts",
    "typeorm:sync": "npm run typeorm -- schema:sync migrationDataSource.ts",
    "typeorm:migrate": "npm run typeorm -- migration:run migrationDataSource.ts",
    "typeorm:reset-db": "npm run typeorm:drop && npm run typeorm:sync && npm run typeorm:migrate",

    "generate:db-index": "ts-node --project tsconfig.server.json scripts/genTypeormIdx.ts",
    "generate": "npm run generate:db-index",

    "copy:assets": "cpx \"src/public/{img,style}/**/*\" dist/public",
    "copy:views": "cpx \"src/views/**/*\" dist/views",
    "copy": "npm run copy:assets && npm run copy:views",

    "build:sass": "sass src/public/style:src/public/style --no-source-map",
    "build:server": "npm run generate && tsc --project tsconfig.server.json",
    "build:client": "cross-env NODE_ENV=production node esbuild.client.js",
    "build": "npm run build:sass && npm run build:server && npm run build:client && npm run copy",

    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:debug": "cross-env TEST_DB_LOGGING=true jest --runInBand --detectOpenHandles",
    "test:quick": "./scripts/test.quick.sh",
    "test:all": "./scripts/test.all.sh",
    "pretest:client": "npm run generate",
    "test:client": "jest --config jest.client.config.ts",
    "pretest:client:unit": "npm run generate",
    "test:client:unit": "jest --config jest.client.config.ts tests/client/unit",
    "test:client:ui": "jest --config jest.client.config.ts tests/client/ui",
    "test:client:flows": "jest --config jest.client.config.ts tests/client/flows",
    "test:client:watch": "jest --config jest.client.config.ts --watch",
    "test:client:coverage": "jest --config jest.client.config.ts --coverage",

    "e2e:prepare": "ts-node --transpile-only scripts/e2e.db.init.ts",
    "e2e:server": "cross-env NODE_ENV=e2e node dist/server.js",
    "e2e:init": "npm run build && npm run e2e:prepare && npm run e2e:server",
    "e2e:headed": "playwright test --headed",
    "e2e:ui": "playwright test --ui",
    "e2e": "playwright test"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.8",
    "connect-typeorm": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "csv-reader": "^1.0.12",
    "date-fns": "^4.1.0",
    "debug": "^4.4.3",
    "express": "^5.0.1",
    "express-flash": "^0.0.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "marked": "^17.0.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.11.4",
    "nodemailer": "7.0.11",
    "openid-client": "^6.7.1",
    "typeorm": "0.3.26",
    "dotenv": "^17.2.2",
    "pug": "^3.0.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-flash": "^0.0.5",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jquery": "^3.5.33",
    "@types/jsdom": "^21.1.7",
    "@types/marked": "^5.0.2",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.17",
    "@types/select2": "^4.0.63",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.0",
    "cpx2": "^8.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.6",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fixed-jsdom": "^0.0.11",
    "jest-serial-runner": "^1.2.2",
    "jquery": "^3.7.1",
    "jsdom": "^27.0.0",
    "msw": "^2.12.4",
    "nodemon": "^3.1.11",
    "sass": "^1.83.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "undici": "^7.16.0"
  }
}
