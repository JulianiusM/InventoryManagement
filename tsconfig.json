{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "lib": [
      "ES2024",
      "DOM"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "noEmit": true
    // ← important: editor-only, don’t emit
  },
  "include": [
    "src/**/*"
  ]
}
