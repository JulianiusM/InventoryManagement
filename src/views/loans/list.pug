extends ../layout

block content
    - const items = (data && data.items) ? data.items : []
    - const loans = (data && data.loans) ? data.loans : []
    - const conditions = ['new', 'like_new', 'good', 'fair', 'poor']

    #liveAlerts

    .d-flex.justify-content-between.align-items-center.mb-3
        div
            a.btn.btn-outline-light.btn-sm(href="/items") Back
            h1.h3.mt-2.mb-0.text-white Lending
        a.btn.btn-outline-light(href="/scan") Scan

    .card.text-bg-dark.border-secondary.mb-4
        .card-body
            h2.h5.mb-3 New loan
            form.row.g-3(method="post" action="/loans")
                .col-md-4
                    label.form-label(for="itemId") Item
                    select#itemId.form-select.text-bg-dark(name="itemId" required)
                        option(value="" disabled selected) Select an item...
                        each it in items
                            option(value=it.id) #{it.name}
                .col-md-3
                    label.form-label(for="direction") Type
                    select#direction.form-select.text-bg-dark(name="direction")
                        option(value="lend" selected) Lending out
                        option(value="borrow") Borrowing
                .col-md-2
                    label.form-label(for="conditionOut") Condition
                    select#conditionOut.form-select.text-bg-dark(name="conditionOut")
                        option(value="") Not specified
                        each c in conditions
                            option(value=c) #{c.replace('_', ' ')}
                .col-md-3
                    label.form-label(for="partyName") Counterparty (name)
                    input#partyName.form-control.text-bg-dark(type="text" name="partyName" required)
                .col-md-4
                    label.form-label(for="partyEmail") Email (optional)
                    input#partyEmail.form-control.text-bg-dark(type="email" name="partyEmail")
                .col-md-4
                    label.form-label(for="partyPhone") Phone (optional)
                    input#partyPhone.form-control.text-bg-dark(type="tel" name="partyPhone")
                .col-md-4
                    label.form-label(for="dueAt") Due date (optional)
                    input#dueAt.form-control.text-bg-dark(type="date" name="dueAt")
                .col-12
                    label.form-label(for="notes") Notes (optional)
                    textarea#notes.form-control.text-bg-dark(name="notes" rows="2" placeholder="Any additional notes about this loan...")
                .col-12
                    button.btn.btn-primary(type="submit") Create loan

    .card.text-bg-dark.border-secondary
        .card-body
            h2.h5.mb-3 Active loans
            if loans.length === 0
                .text-white-50 No active loans.
            else
                .table-responsive
                    table.table.table-dark.table-hover.align-middle
                        thead
                            tr
                                th Item
                                th Type
                                th Counterparty
                                th Condition
                                th Started
                                th Due
                                th
                        tbody
                            each l in loans
                                tr
                                    td
                                        a.text-white(href=`/items/${l.item.id}`) #{l.item.name}
                                    td
                                        if l.direction === 'lend'
                                            span.badge.text-bg-primary Lending
                                        else
                                            span.badge.text-bg-secondary Borrowing
                                    td
                                        | #{l.party.name}
                                        if l.party.email
                                            span.text-white-50.small  (#{l.party.email})
                                    td.text-white-50 #{l.conditionOut ? l.conditionOut.replace('_', ' ') : '—'}
                                    td.text-white-50 #{new Date(l.startAt).toLocaleString()}
                                    td.text-white-50 #{l.dueAt ? new Date(l.dueAt).toLocaleDateString() : '—'}
                                    td.text-end
                                        button.btn.btn-sm.btn-outline-success.loan-return(type="button" data-loan-id=l.id) Mark returned
            p.text-white-50.small.mt-3 Returned loans are kept for audit purposes.

block scripts
    script(type="module" src="/js/loans/list.gen.js")
