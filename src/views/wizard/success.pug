extends ../layout

block meta
    title Success | Quick Add | Inventory Management

block content
    - const entityType = data.entityType || ''
    - const entityName = data.entityName || ''
    - const editUrl = data.editUrl || ''
    - const listUrl = data.listUrl || ''
    - const typeLabel = entityType.charAt(0).toUpperCase() + entityType.slice(1)

    .text-center.py-5
        i.bi.bi-check-circle-fill.display-1.text-success.mb-3.d-block
        h2.text-white #{typeLabel} Created!
        p.text-white-50.fs-5
            strong.text-white= entityName
            |  has been created successfully.

        .d-flex.justify-content-center.gap-3.mt-4.flex-wrap
            a.btn.btn-primary(href=editUrl)
                i.bi.bi-pencil.me-1
                | View &amp; Edit Details
            a.btn.btn-outline-light(href=`/wizard/${entityType}`)
                i.bi.bi-plus-lg.me-1
                | Create Another #{typeLabel}
            a.btn.btn-outline-secondary(href=listUrl)
                i.bi.bi-list.me-1
                | Go to #{typeLabel} List
            a.btn.btn-outline-secondary(href="/wizard")
                i.bi.bi-house.me-1
                | Quick Add Home
