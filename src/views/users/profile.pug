extends ../layout

block content
  .d-flex.justify-content-between.align-items-center.mb-3
    h1.mb-0.text-white Profile
    a.btn.btn-outline-light(href="/users/dashboard") Dashboard

  if !user
    .alert.alert-warning Not logged in.
  else
    .card.text-bg-dark.border-secondary
      .card-body
        dl.row.mb-0
          dt.col-sm-3 ID
          dd.col-sm-9.text-white-50 #{user.id}
          dt.col-sm-3 Email
          dd.col-sm-9.text-white-50 #{user.email}
          dt.col-sm-3 Name
          dd.col-sm-9.text-white-50 #{user.displayName}
