//- views/auth/forgot-password.pug – Facelift
extends ../layout

block meta
    title Password Reset | Surveyor

block title
    h1.card-header.text-center
        i.bi.bi-lock-fill.me-2
        | Forgot your password?

block content
    p.lead.text-center.mb-4
        i.bi.bi-envelope-at-fill.me-1
        | Enter your username to receive a reset link.

    form#forgotForm.row.gy-3.justify-content-center(
        action="/users/forgot-password"
        method="post")
        //── Username ────────────────────────────────────────────
        .col-md-6
            label.form-label.mb-1(for="username")
                i.bi.bi-person-circle.me-1
                | Username&nbsp;*
            input#username.form-control.text-bg-dark(
                type="text"
                name="username"
                placeholder="Your username"
                required)

        //── Submit ──────────────────────────────────────────────
        .col-12.d-grid.mt-2
            button.btn.btn-success(type="submit")
                i.bi.bi-send-check.me-1
                | Send reset link

        //── Zurück zum Login ───────────────────────────────────
        .col-12.text-center.mt-3
            a.text-decoration-none(href="/users/login")
                i.bi.bi-arrow-left-circle.me-1
                | Back to login
