//- views/users/reset-password.pug – Facelift
extends ../layout

block meta
    title Reset password | Surveyor

block title
    h1.card-header.text-center
        i.bi.bi-shield-lock-fill.me-2
        | Reset your password

block content
    form.row.gy-3.justify-content-center(
        action=`/users/reset-password/${token}`
        method="post")
        //── Neues Passwort ────────────────────────────────
        .col-md-6
            label.form-label.mb-1(for="password")
                i.bi.bi-key-fill.me-1
                | New password&nbsp;*
            input#password.form-control.text-bg-dark(
                type="password"
                name="password"
                minlength="8"
                placeholder="min. 8 characters"
                required)

        //── Bestätigung ───────────────────────────────────
        .col-md-6
            label.form-label.mb-1(for="confirmPassword")
                i.bi.bi-key.me-1
                | Confirm password&nbsp;*
            input#confirmPassword.form-control.text-bg-dark(
                type="password"
                name="confirmPassword"
                minlength="8"
                placeholder="repeat password"
                required)

        //── Submit ────────────────────────────────────────
        .col-12.d-grid.mt-2
            button.btn.btn-success(type="submit")
                i.bi.bi-check-lg.me-1
                | Change password

        //── Link zurück ───────────────────────────────────
        .col-12.text-center.mt-3
            a.text-decoration-none(href="/users/login")
                i.bi.bi-arrow-left-circle.me-1
                | Back to login
