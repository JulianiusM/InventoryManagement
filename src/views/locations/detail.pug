extends ../layout

block content
    - const location = (data && data.location) ? data.location : null
    - const items = (data && data.items) ? data.items : []

    .d-flex.justify-content-between.align-items-center.mb-3
        div
            a.btn.btn-outline-light.btn-sm(href="/locations") Back
            h1.h3.mt-2.mb-0.text-white #{location.name}
            p.text-white-50.mb-0 Kind: #{location.kind}
        a.btn.btn-outline-light(href="/scan") Scan

    .card.text-bg-dark.border-secondary.mb-3
        .card-body
            h2.h5.mb-3 Details
            dl.row.mb-0
                dt.col-sm-3 ID
                dd.col-sm-9.text-white-50 #{location.id}
                dt.col-sm-3 Parent
                dd.col-sm-9.text-white-50 #{location.parentId || '—'}
                dt.col-sm-3 QR
                dd.col-sm-9.text-white-50 #{location.qrCode || '—'}

    .card.text-bg-dark.border-secondary
        .card-body
            h2.h5.mb-3 Items here
            if items.length === 0
                .text-white-50 No items in this location.
            else
                .table-responsive
                    table.table.table-dark.table-hover.align-middle
                        thead
                            tr
                                th Name
                                th Type
                                th Created
                        tbody
                            each it in items
                                tr
                                    td
                                        a.text-white(href=`/items/${it.id}`) #{it.name}
                                    td.text-white-50 #{it.type}
                                    td.text-white-50 #{new Date(it.createdAt).toLocaleString()}
